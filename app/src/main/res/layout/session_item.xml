<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/session_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="?android:textColorPrimary"
        android:enabled="true"
        android:textStyle="bold"
        android:text="CSC433"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/seperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="Â·"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/session_name_tv"
        app:layout_constraintTop_toTopOf="@id/session_name_tv"
        app:layout_constraintBottom_toBottomOf="@id/session_name_tv"/>

    <TextView
        android:id="@+id/educator_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="Teacher"
        app:layout_constraintStart_toEndOf="@id/seperator"
        app:layout_constraintTop_toTopOf="@id/session_name_tv"
        app:layout_constraintBottom_toBottomOf="@id/session_name_tv"/>

    <Button
        android:id="@+id/action_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="join"
        style="?android:buttonStyleSmall"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:text="Model name"
        app:layout_constraintTop_toBottomOf="@id/session_name_tv"
        app:layout_constraintStart_toStartOf="@id/session_name_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>