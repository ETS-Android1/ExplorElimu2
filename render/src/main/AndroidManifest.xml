<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.render">

    <uses-sdk tools:overrideLibrary="android.support.compat, android.arch.lifecycle" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExplorElimu"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ReviewActivity"
            android:label="Model Review" />
        <activity
            android:name=".AddModelActivity"
            android:label="Model Details"
            android:parentActivityName=".view.ModelActivity" />
        <activity android:name=".MainActivity"></activity>
        <activity
            android:name=".view.MenuActivity"
            android:label="@string/title_activity_menu"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".view.TextActivity"
            android:label="@string/title_activity_text"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".view.ModelActivity"
            android:label="@string/title_activity_model"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>